<%- include partials/header.ejs -%>

    <nav class="navbar navbar-light bg-white">
        <a href="#" class="navbar-brand" name='userName'>
            <%=username%>
        </a>
        <a href="/logout">logout</a>
        <form class="form-inline">
            <div class="input-group">
                <input type="text" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2" />
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="button" id="button-addon2">
          <i class="fas fa-search "></i>
        </button>
                </div>
            </div>
        </form>
    </nav>

    <div class="container-fluid gedf-wrapper">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 gedf-main">
                <!--- \\\\\\\Post Place-->
                <div class="card gedf-card">
                    <div class="card-body">
                        <form action="/comment" method="post">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                    <div class="form-group">
                                        <label class="sr-only" for="message">post</label>
                                        <textarea class="form-control" name="comment" id="message" rows="3" placeholder="What are you thinking?"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="btn-toolbar justify-content-between">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-primary">share</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Post Place /////-->

                <!--- \\\\\\\Post-->
                <% users.forEach((user)=>{ %>
                    <div class="card gedf-card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="mr-2">
                                        <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="" />
                                    </div>

                                    <div class="ml-2">
                                        <div class="h5 m-0">
                                            <%=user._username[{}]%>
                                        </div>
                                        <div class="h7 text-muted">
                                            email
                                        </div>
                                    </div>

                                </div>
                                <div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="text-muted h7 mb-2">
                                <i class="far fa-clock"></i>10 min ago
                            </div>
                            <p class="card-text">
                                <%=user.comment%>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="#" class="card-link"><i class="far fa-thumbs-up"></i> Like</a>
                            <a href="#" class="card-link"><i class="far fa-thumbs-down"></i> Dislike</a>
                            <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
                            <a href="#" class="card-link"><i class="fas fa-share"></i> Share</a>
                        </div>
                    </div>
                    <% }) %>
                        <!-- Post /////-->
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    <%- include partials/footer.ejs -%>